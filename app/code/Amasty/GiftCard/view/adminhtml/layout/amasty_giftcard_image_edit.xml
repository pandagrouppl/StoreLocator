<?xml version="1.0"?>

<page xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" layout="admin-2columns-left"
      xsi:noNamespaceSchemaLocation="urn:magento:framework:View/Layout/etc/page_configuration.xsd">
    <body>
        <referenceContainer name="left">
            <block class="Amasty\GiftCard\Block\Adminhtml\Image\Edit\Tabs" name="image_tabs">
                <block class="Amasty\GiftCard\Block\Adminhtml\Image\Edit\Tab\General" name="amasty_giftcard_image_edit_tab_general" />

                <action method="addTab">
                    <argument name="name" xsi:type="string">amasty_giftcard_image_edit_tab_general</argument>
                    <argument name="block" xsi:type="string">amasty_giftcard_image_edit_tab_general</argument>
                </action>
            </block>
        </referenceContainer>

        <referenceContainer name="content">
            <block class="Amasty\GiftCard\Block\Adminhtml\Image\Edit" name="image_edit"/>
        </referenceContainer>
    </body>
</page>