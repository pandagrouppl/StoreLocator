    <body>
        <referenceBlock name="order_items">
            <block class="Amasty\GiftCard\Block\Adminhtml\Sales\Items\Column\GiftCard\Name" name="column_name_amgiftcard" template="Magento_Sales::items/column/name.phtml" group="column"/>
        </referenceBlock>
        <referenceBlock name="order_totals">
            <block class="Amasty\GiftCard\Block\Adminhtml\Sales\Order\Totals" name="amgiftcard_totals">
                <action method="setBeforeCondition">
                    <argument name="condition" xsi:type="string">amgiftcard</argument>
